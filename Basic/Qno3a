import javafx.application.Application;
import javafx.stage.Stage;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.TextField;
import javafx.scene.control.Label;
import javafx.scene.layout.GridPane;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;

public class Qno3a extends Application
{

    @Override
    public void start(Stage primaryStage)
    {
        // Create layout
        GridPane gp = new GridPane();
        gp.setPadding(new Insets(15));
        gp.setHgap(10);
        gp.setVgap(10);
        gp.setAlignment(Pos.CENTER);

        // Create UI components
        TextField txt_fn = new TextField();
        txt_fn.setPromptText("Enter first number");

        TextField txt_sn = new TextField();
        txt_sn.setPromptText("Enter second number");

        Label lbl_res = new Label("Result will be shown here");

        Button btn_sum = new Button("Sum");

        // Add components to layout
        gp.add(new Label("First Number:"), 0, 0);
        gp.add(txt_fn, 1, 0);
        gp.add(new Label("Second Number:"), 0, 1);
        gp.add(txt_sn, 1, 1);
        gp.add(btn_sum, 0, 2);
        gp.add(lbl_res, 1, 2);

        // Button event handler
        btn_sum.setOnAction(new EventHandler<ActionEvent>()
        {
            public void handle(ActionEvent e)
            {
                try {
                    double fn = Double.parseDouble(txt_fn.getText());
                    double sn = Double.parseDouble(txt_sn.getText());
                    double res = fn + sn;
                    lbl_res.setText("Sum: " + res);
                } catch (NumberFormatException ex)
                {
                    lbl_res.setText("Invalid input. Please enter numbers.");
                }
            }
        });

        // Set up scene and stage
        Scene scene = new Scene(gp, 400, 250);
        primaryStage.setScene(scene);
        primaryStage.setTitle("Qno. 3a - Sum Calculator");
        primaryStage.show();
    }

    public static void main(String[] args)
    {
        launch(args);
    }
}